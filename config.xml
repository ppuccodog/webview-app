<?xml version='1.0' encoding='utf-8'?>
<!-- 核心配置：widget标签的id=包名，version=应用版本 -->
<widget 
  id="com.ysjyy.csdh"  <!-- 自定义包名（必须唯一，如com.tencent.wechat） -->
  version="1.0.0"               <!-- 自定义版本号（如1.0.0、2.1.5） -->
  xmlns="http://www.w3.org/ns/widgets" 
  xmlns:cdv="http://cordova.apache.org/ns/1.0">

  <!-- 应用基础信息 -->
  <name>YJSCSDH</name>       <!-- 自定义应用名称（显示在手机桌面） -->
  <description>
    这是一个支持自定义网址的浏览器式APP，可加载外部CSS和资源，支持页面跳转。
  </description>                  <!-- 自定义应用描述 -->
  <author 
    email="ppucco@foxmail.com"  <!-- 开发者邮箱（可选） -->
    href="http://hs1314.cn"> <!-- 开发者网站（可选） -->
    开发者名称
  </author>

  <!-- 安卓平台专属配置 -->
  <platform name="android">
    <preference name="AndroidXEnabled" value="true" /> <!-- 适配新版安卓（勿删） -->
    <preference name="LoadUrlTimeoutValue" value="80000" /> <!-- 网页加载超时（毫秒，默认8秒） -->
    <preference name="WebViewZoom" value="true" /> <!-- 允许网页缩放（true/false） -->
    <preference name="AllowFileAccess" value="true" /> <!-- 允许访问本地文件（勿删） -->
  </platform>

  <!-- 权限与访问控制（勿删，确保外部资源加载） -->
  <access origin="*" /> <!-- 允许访问所有网址 -->
  <allow-intent href="http://*/*" /> <!-- 允许HTTP链接 -->
  <allow-intent href="https://*/*" /> <!-- 允许HTTPS链接 -->
</widget>
